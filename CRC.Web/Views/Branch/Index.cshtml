@{
    ViewData["Title"] = "Branch List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Branch List</h2>
        <button id="btnAddBranch" class="btn btn-primary" type="button">Add Branch</button>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-sm table-bordered" id="branchTable">
            <thead class="table-secondary">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Location</th>
                    <th>State</th>
                    <th>Status</th>
                    <th style="width: 120px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- JS -->
            </tbody>
        </table>
    </div>
</div>

<!-- Add/Edit Branch Modal -->
<div class="modal fade" id="branchModal" tabindex="-1" aria-labelledby="branchModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="branchModalLabel">Add Branch</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="BranchIsNew" value="true" />

                <div class="mb-3">
                    <label for="BranchId" class="form-label">ID</label>
                    <input id="BranchId" class="form-control" type="text" />
                </div>

                <div class="mb-3">
                    <label for="BranchName" class="form-label">Name</label>
                    <input id="BranchName" class="form-control" type="text" />
                </div>

                <div class="mb-3">
                    <label for="BranchLocation" class="form-label">Location</label>
                    <input id="BranchLocation" class="form-control" type="text" />
                </div>

                <div class="mb-3">
                    <label for="BranchState" class="form-label">State</label>
                    <input id="BranchState" class="form-control" type="text" />
                </div>

                <div class="mb-3">
                    <label for="BranchStatus" class="form-label">Status</label>
                    <select id="BranchStatus" class="form-select">
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                </div>

                <div id="branchFormMessage" class="text-danger"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="btnSaveBranch" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/branch/index.js"></script>
}