@{
    ViewData["Title"] = "Document Management";
}

<div class="row">
    <div class="col-12">
        <div class="card mb-3">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2>Document Management</h2>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="ms-2" style="max-width: 260px;">
                        <input id="documentSearch"
                               type="text"
                               class="form-control form-control-sm"
                               placeholder="Search by ID or Name..."
                               autocomplete="off" />
                    </div>
                </div>
                <ul class="nav nav-tabs card-header-tabs" id="docMgmtTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active"
                                id="patient-doc-tab"
                                data-bs-toggle="tab"
                                data-bs-target="#patient-doc-pane"
                                type="button"
                                role="tab"
                                aria-controls="patient-doc-pane"
                                aria-selected="true">
                            Patient Documents
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link"
                                id="staff-doc-tab"
                                data-bs-toggle="tab"
                                data-bs-target="#staff-doc-pane"
                                type="button"
                                role="tab"
                                aria-controls="staff-doc-pane"
                                aria-selected="false">
                            Staff Documents
                        </button>
                    </li>
                </ul>
            </div>

            <div class="card-body">
                <div class="tab-content" id="docMgmtTabsContent">
                    <!-- Patient Documents Tab -->
                    <div class="tab-pane fade show active"
                         id="patient-doc-pane"
                         role="tabpanel"
                         aria-labelledby="patient-doc-tab">
                        <div class="table-responsive">
                            <table class="table table-sm table-striped table-bordered align-middle" id="patientDocTable">
                                <thead class="table-secondary">
                                    <tr>
                                        <th style="width: 15%;">Patient ID</th>
                                        <th style="width: 25%;">Patient Name</th>
                                        <th style="width: 40%;">Document Name</th>
                                        <th style="width: 20%;">Uploaded Time</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @* Filled by JS *@
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Staff Documents Tab -->
                    <div class="tab-pane fade"
                         id="staff-doc-pane"
                         role="tabpanel"
                         aria-labelledby="staff-doc-tab">
                        <div class="table-responsive">
                            <table class="table table-sm table-striped table-bordered align-middle" id="staffDocTable">
                                <thead class="table-secondary">
                                    <tr>
                                        <th style="width: 15%;">Staff ID</th>
                                        <th style="width: 25%;">Staff Name</th>
                                        <th style="width: 40%;">Document Name</th>
                                        <th style="width: 20%;">Uploaded Time</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @* Filled by JS *@
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/documentManagement/index.js"></script>
}