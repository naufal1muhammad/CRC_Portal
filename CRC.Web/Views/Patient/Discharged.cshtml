@{
    ViewData["Title"] = "Discharged Patients";
    Layout = "_Layout";
}

<div class="container-fluid py-3">
    <div class="card mb-3">
        <div class="card-header">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Discharged Patients</h2>

        <div class="ms-auto" style="max-width: 260px;">
            <input id="dischargedPatientSearch"
                   type="text"
                   class="form-control form-control-sm"
                   placeholder="Search by ID or Name..."
                   autocomplete="off" />
        </div>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="dischargedPatientsTable" class="table table-sm table-striped mb-0">
                    <thead class="table-secondary">
                        <tr>
                            <th>Patient ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Branch</th>
                            <th>Discharge Type</th>
                            <th>Discharge Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="8" class="text-center text-muted">
                                Loading...
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/patient/discharged-list.js"></script>
}