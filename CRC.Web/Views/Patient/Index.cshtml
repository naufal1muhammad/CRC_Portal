@{
    ViewData["Title"] = "Patient";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Patient</h2>
        <button id="btnAddPatient" class="btn btn-primary" type="button">Add Patient</button>
    </div>

    <ul class="nav nav-tabs" id="patientStageTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="tab-T2" data-bs-toggle="tab"
                    data-bs-target="#pane-T2" type="button" role="tab"
                    aria-controls="pane-T2" aria-selected="true" data-stage="T2">
                T2 (Screening)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tab-T3" data-bs-toggle="tab"
                    data-bs-target="#pane-T3" type="button" role="tab"
                    aria-controls="pane-T3" aria-selected="false" data-stage="T3">
                T3 (Diagnosis)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tab-T4" data-bs-toggle="tab"
                    data-bs-target="#pane-T4" type="button" role="tab"
                    aria-controls="pane-T4" aria-selected="false" data-stage="T4">
                T4 (Staging)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tab-T5" data-bs-toggle="tab"
                    data-bs-target="#pane-T5" type="button" role="tab"
                    aria-controls="pane-T5" aria-selected="false" data-stage="T5">
                T5 (Treatment)
            </button>
        </li>
    </ul>

    <div class="tab-content mt-3">
        @foreach (var stage in new[] { "T2", "T3", "T4", "T5" })
        {
            var active = stage == "T2" ? "show active" : "";
            <div class="tab-pane fade @active" id="pane-@stage" role="tabpanel" aria-labelledby="tab-@stage">
                <div class="table-responsive">
                    <table class="table table-striped table-sm table-bordered" id="table-@stage">
                        <thead class="table-secondary">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>NRIC</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Branch</th>
                                <th>Stage</th>
                                <th>Appointment Date</th>
                                <th style="width: 120px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- populated by JS -->
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>

<!-- Add/Edit Patient Modal -->
<div class="modal fade" id="patientModal" tabindex="-1" aria-labelledby="patientModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="patientModalLabel">Add Patient</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="PatientIsNew" value="true" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="PatientId" class="form-label">ID</label>
                            <input id="PatientId" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="PatientName" class="form-label">Name</label>
                            <input id="PatientName" class="form-control" type="text" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="PatientNRIC" class="form-label">NRIC Number</label>
                            <input id="PatientNRIC" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="PatientPhone" class="form-label">Phone Number</label>
                            <input id="PatientPhone" class="form-control" type="text" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="PatientEmail" class="form-label">Email Address</label>
                            <input id="PatientEmail" class="form-control" type="email" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="PatientBranch" class="form-label">Branch</label>
                            <select id="PatientBranch" class="form-select">
                                <!-- filled by JS -->
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="PatientStage" class="form-label">Stage</label>
                            <select id="PatientStage" class="form-select">
                                <option value="T2">T2 (Screening)</option>
                                <option value="T3">T3 (Diagnosis)</option>
                                <option value="T4">T4 (Staging)</option>
                                <option value="T5">T5 (Treatment)</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="PatientAppointmentDate" class="form-label">Next Appointment Date</label>
                            <input id="PatientAppointmentDate" class="form-control" type="date" />
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="PatientRemarks" class="form-label">Remarks</label>
                    <textarea id="PatientRemarks" class="form-control" rows="3"></textarea>
                </div>

                <div id="patientFormMessage" class="text-danger"></div>
                <div class="mb-3">
                    <label for="PatientFiles" class="form-label">PDF File Uploader (Unlimited uploads)</label>
                    <input id="PatientFiles" class="form-control" type="file" multiple accept="application/pdf" />
                    <div class="form-text">
                        You can select one or more PDF files. They will be uploaded when you click Save.
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Existing Documents</label>
                    <div id="patientDocumentsList">
                        <!-- Filled by JS -->
                        <p class="text-muted mb-0">No documents loaded.</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="btnSavePatient" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/patient/index.js"></script>
}