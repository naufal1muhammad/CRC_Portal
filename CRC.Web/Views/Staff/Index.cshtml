@{
    ViewData["Title"] = "Staff";
}

<div class="container mt-4">
    <div class="card mb-3">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Staff</h2>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <button id="btnAddStaff" class="btn btn-primary" type="button">Add Staff</button>
                <div class="ms-2" style="max-width: 260px;">
                    <input id="staffSearch"
                           type="text"
                           class="form-control form-control-sm"
                           placeholder="Search by ID or Name..."
                           autocomplete="off" />
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-sm table-bordered" id="staffTable">
                    <thead class="table-secondary">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>NRIC</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Branch</th>
                            <th>Staff Type</th>
                            <th style="width: 120px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- populated by JS -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add/Edit Staff Modal -->
<div class="modal fade" id="staffModal" tabindex="-1" aria-labelledby="staffModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staffModalLabel">Add Staff</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="StaffIsNew" value="true" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="StaffId" class="form-label">Staff ID</label>
                            <input id="StaffId" class="form-control" readonly />
                            <div class="form-text">
                                For new staff, Staff ID will be generated automatically on save.
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="StaffName" class="form-label">Name</label>
                            <input id="StaffName" class="form-control" type="text" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="StaffNRIC" class="form-label">NRIC Number</label>
                            <input id="StaffNRIC" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="StaffPhone" class="form-label">Phone Number</label>
                            <input id="StaffPhone" class="form-control" type="text" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="StaffEmail" class="form-label">Email Address</label>
                            <input id="StaffEmail" class="form-control" type="email" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="StaffBranch" class="form-label">Branch</label>
                            <select id="StaffBranch" class="form-select">
                                <!-- filled by JS -->
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="StaffType" class="form-label">Staff Type</label>
                            <select id="StaffType" class="form-select">
                                <option value="">Loading staff types...</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Mandatory Documents</label>
                    <div id="mandatoryDocumentsContainer">
                        <p class="text-muted mb-0">Select a staff type to see required documents.</p>
                    </div>
                </div>

                <div id="staffFormMessage" class="text-danger"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="btnSaveStaff" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/staff/index.js"></script>
}