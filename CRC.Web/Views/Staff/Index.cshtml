@{
    ViewData["Title"] = "Staff";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Staff</h2>
        <button id="btnAddStaff" class="btn btn-primary" type="button">Add Staff</button>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-sm table-bordered" id="staffTable">
            <thead class="table-secondary">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>NRIC</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Branch</th>
                    <th>Staff Type</th>
                    <th style="width: 120px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- populated by JS -->
            </tbody>
        </table>
    </div>
</div>

<!-- Add/Edit Staff Modal -->
<div class="modal fade" id="staffModal" tabindex="-1" aria-labelledby="staffModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staffModalLabel">Add Staff</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="StaffIsNew" value="true" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="StaffId" class="form-label">ID</label>
                            <input id="StaffId" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="StaffName" class="form-label">Name</label>
                            <input id="StaffName" class="form-control" type="text" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="StaffNRIC" class="form-label">NRIC Number</label>
                            <input id="StaffNRIC" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="StaffPhone" class="form-label">Phone Number</label>
                            <input id="StaffPhone" class="form-control" type="text" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="StaffEmail" class="form-label">Email Address</label>
                            <input id="StaffEmail" class="form-control" type="email" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="StaffBranch" class="form-label">Branch</label>
                            <select id="StaffBranch" class="form-select">
                                <!-- filled by JS -->
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="StaffType" class="form-label">Staff Type</label>
                            <select id="StaffType" class="form-select">
                                <option value="">-- Select Staff Type --</option>
                                <option value="1">Doctor</option>
                                <option value="2">Nurse</option>
                                <option value="3">Counsellor</option>
                                <option value="4">Clerk</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="StaffFiles" class="form-label">PDF File Uploader</label>
                    <input id="StaffFiles" class="form-control" type="file" multiple accept="application/pdf" />
                    <div class="form-text">
                        You can select one or more PDF files. They will be uploaded when you click Save.
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Existing Documents</label>
                    <div id="staffDocumentsList">
                        <p class="text-muted mb-0">No documents loaded.</p>
                    </div>
                </div>

                <div id="staffFormMessage" class="text-danger"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="btnSaveStaff" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/staff/index.js"></script>
}