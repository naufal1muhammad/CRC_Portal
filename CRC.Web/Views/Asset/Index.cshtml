@{
    ViewData["Title"] = "Asset Management";
}

<div class="container mt-4">
    <h2 class="mb-3">Asset Management</h2>

    <div class="row">
        <div class="col-md-4">
            <h5>Active Branches</h5>
            <div class="table-responsive">
                <table class="table table-sm table-hover table-bordered" id="assetBranchTable">
                    <thead class="table-secondary">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- JS -->
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 id="assetBranchTitle">Assets (select a branch)</h5>
                <button id="btnAddAsset" class="btn btn-primary btn-sm" type="button" disabled>Add Asset</button>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-sm table-bordered" id="assetTable">
                    <thead class="table-secondary">
                        <tr>
                            <th>Asset ID</th>
                            <th>Name</th>
                            <th>Quantity</th>
                            <th>Cost</th>
                            <th>Total Cost</th>
                            <th style="width: 120px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- JS -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add/Edit Asset Modal -->
<div class="modal fade" id="assetModal" tabindex="-1" aria-labelledby="assetModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assetModalLabel">Add Asset</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="AssetIsNew" value="true" />
                <input type="hidden" id="AssetBranchId" value="" />

                <div class="mb-3">
                    <label class="form-label">Branch</label>
                    <input id="AssetBranchName" class="form-control" type="text" readonly />
                </div>

                <div class="mb-3">
                    <label for="AssetId" class="form-label">Asset ID</label>
                    <input id="AssetId" class="form-control" type="text" />
                </div>

                <div class="mb-3">
                    <label for="AssetName" class="form-label">Asset Name</label>
                    <input id="AssetName" class="form-control" type="text" />
                </div>

                <div class="mb-3">
                    <label for="AssetQuantity" class="form-label">Quantity</label>
                    <input id="AssetQuantity" class="form-control" type="number" min="1" />
                </div>

                <div class="mb-3">
                    <label for="AssetCost" class="form-label">Cost</label>
                    <input id="AssetCost" class="form-control" type="number" step="0.01" min="0" />
                </div>

                <div id="assetFormMessage" class="text-danger"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="btnSaveAsset" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/asset/index.js"></script>
}