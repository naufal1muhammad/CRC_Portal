@{
    ViewData["Title"] = "Dashboard";
    var fullName = User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value ?? User.Identity?.Name;
}

<div class="container mt-4">
    <h2 class="mb-3">Dashboard</h2>
    <p>Welcome, @fullName</p>

    <hr />

    <!-- Row 1: Active Branches + Pie Chart -->
    <div class="row mb-4 align-items-stretch">
        <!-- Active Branches (length B) -->
        <div class="col-md-4 mb-3">
            <div class="card p-3 dashboard-card">
                <h5>Active Branches</h5>
                <p id="activeBranchesCount" class="fs-3">0</p>
            </div>
        </div>

        <!-- Pie Chart (length C, slightly larger than B) -->
        <div class="col-md-8 mb-3">
            <div class="card dashboard-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Patients by Stage (Per State)</h5>
                    <select id="ddlPatientStateFilter" class="form-select form-select-sm w-auto">
                        <option value="">All States</option>
                    </select>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="stateStagePieChart"></canvas>
                    </div>
                    <div id="stateStagePieChartEmpty" class="text-muted small mt-2 d-none">
                        No patient data available for the selected state.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Row 2: Bar Graph (length B + C = full width) -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card p-3 dashboard-card">
                <h5>Patients by Stage (T2, T3, T4, T5)</h5>
                <div class="chart-container">
                    <canvas id="patientsStageChartCanvas"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Chart.js from CDN for now; later you can switch to local Falcon vendor file -->
    @* <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> *@
    <script src="~/js/dashboard/index.js"></script>
}